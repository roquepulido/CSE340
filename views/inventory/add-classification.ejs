<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <% } else { res.redirect('/') } %>

    <%- messages() %>
      <% if (errors) { %>
        <ul class="notice">
          <% errors?.array().forEach(error=> { %>
            <li>
              <%= error.msg %>
            </li>
            <% }) %>
        </ul>
        <% } %>

          <form class="form" action="/inv/new/classification" method="post">
            <span class="required-message">* Field is required</span>
            <p id="classification-rules">Name must be aphabetic characters only.</p>
            <label>
              Classification Name: <input type="text" name="classification_name" required
                value="<%= locals.classification_name %>" pattern="[A-Za-z]+"
                title="Name must contain alphabetic characters only (no spaces)." />
            </label>
            <button type="submit">Add</button>
          </form>